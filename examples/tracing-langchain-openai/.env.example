# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5-nano

# OpenTelemetry Exporter Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://hyperdx:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_SERVICE_NAME=langchain-openai-demo

# Telemetry Signals (traces, metrics, logs)
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp
OTEL_PYTHON_LOGGING_AUTO_INSTRUMENTATION_ENABLED=true

# Per-package Capture Mode Configuration
# metadata = Token counts, model, finish reasons only
# all = Full content including messages and tool details
OTEL_INSTRUMENTATION_OPENAI_CAPTURE_MODE=metadata
OTEL_INSTRUMENTATION_LANGGRAPH_CAPTURE_MODE=all
